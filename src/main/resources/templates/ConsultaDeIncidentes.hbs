{{> templates/base }}
{{#partial "head"}}
    <meta charset="utf-8"> <!--Definir los caracteres a utilizar-->
    <link rel = "stylesheet" href = "css/ConsultaDeIncidentes.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Consulta de Incidentes</title>
{{/partial}}
{{> templates/base }}

{{#partial "contenido"}}
    <div id="base">
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">Seleccione Estado de Incidentes</label>
            <select class="form-select" id="inputGroupSelect01">
                <option selected>Seleccionar...</option>
                <option value="abierto">Abierto</option>
                <option value="cerrado">Cerrado</option>
            </select>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4">
        {{#each incidentes}}
            <div class="col">
                <div class="tarjetaIncidente">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{this.entidad}}</li>
                        <li class="list-group-item">{{this.establecimiento}}</li>
                        <li class="list-group-item">{{this.servicio}}</li>
                    </ul>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
{{/partial}}
{{> templates/base }}