{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/Entidades.css">
        <title>Entidades</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <h1>ENTIDADES</h1>
                <div class="row row-cols-1 g-4">
                {{#each entidades}}
                    <div class="col">
                        <div class="tarjetaEntidad d-flex justify-content-between align-items-center">
                            <div>
                                <h2>{{this.nombre}}</h2>
                                <h4>Tipo: {{this.tipo}}</h4>
                                <h4>Establecimientos: {{this.cantidadEstablecimientos}}</h4>
                            </div>
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='/organismosDeControl/{{organismo_id}}/entidadesPrestadoras/{{entidadPrestadora_id}}/entidades/{{this.id}}/establecimientos'">Establecimientos</button>
                        </div>
                    </div>
                {{/each}}
                </div>
        </div>
{{/partial}}
{{> templates/base }}