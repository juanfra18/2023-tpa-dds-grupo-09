{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/PerfilComunidad.css">
        <title>Perfil Comunidad</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <div class="informacion">
                <h2>{{comunidad.nombre}}</h2>
                {{#if miComunidad}}
                <button type="button" class="btn btn-secondary" id="abandonarComunidad" data-comunidad-id="{{comunidad.id}}">Abandonar Comunidad</button>
                {{/if}}
                <p>Administrador: <a href="/perfil/{{comunidad.administrador.id}}">{{comunidad.administrador.usuario.username}}</a><p>
                <p>Miembros:
                <ul>
                  {{#each comunidad.miembrosNoAdministradores}}
                  {{#if usuarioAdministrador}}
                    <li><a href="/perfil/{{this.id}}">{{this.usuario.username}}</a></li>
                   {{else}}
                   <li>{{this.usuario.username}}</li>
                   {{/if}}
                  {{/each}}
                 <ul>
                </p>
            </div>
        </div>
        <script src="/js/AbandonarComunidad.js"></script>
{{/partial}}
{{> templates/base }}