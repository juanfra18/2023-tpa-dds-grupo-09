{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/ReporteDeIncidente.css">
        <title>Reporte de Incidente</title>
{{/partial}}
{{> templates/base }}

{{#partial "contenido"}}

    <body id="body">
        <header id="main-header">
            <a id="logo-header" href="#">
                <span class="site-name">Serviño</span>
                <span class="site-desc">Servicios/ Comunidades</span>
            </a>


            <nav>
                <ul>
                    <li class="nav-item"><a href="/menu">Inicio</a></li>
                    {{#if usuarioBasico}}
                    <li class="nav-item"><a href="/incidentes">Mis Incidentes</a></li>
                    <li class="nav-item"><a href="/sugerenciasDeRevision">Sugerencias de Revisión</a></li>
                    {{/if}}
                    <li class="nav-item"><a href="/perfil"><img src="/./images/userLogo2.png" alt="userImage" id="userImage" width="30" height="30"></a></li>

                </ul>
            </nav>
        </header>

        <div id="base">
            <div class="circulo">
                <img src="/./images/reporteImage.png" alt="userImage" id="reporteImage" width="100" height="100">
            </div>
                <form id="incidente">
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Comunidad</label>
                            <select class="form-select" name = "comunidad" id="inputGroupSelect01">
                                <option selected>Seleccionar...</option>
                                {{#each comunidades}}
                                  <option value="{{this.id}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect01">Entidad</label>
                                <select class="form-select" name="entidad" id="inputGroupSelect01">
                                    <option selected>Seleccionar...</option>
                                    {{#each entidades}}
                                        <option value="{{this.id}}">{{this.nombre}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect02">Establecimiento</label>
                                <select class="form-select" name = "establecimiento" id="inputGroupSelect02">
                                    <!-- Se genera en js-->
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect03">Servicio</label>
                                <select class="form-select" name = "servicio" id="inputGroupSelect03">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Fecha y Hora</span>
                                <input type="datetime-local" class="form-control" name = "fechaYhora" id="fechaYhoraInput">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <span class="input-group-text">Observaciones</span>
                                <textarea class="form-control" name="observaciones" rows="3"></textarea>
                            </div>
                        </div>
                            <button type="button" class="btn btn-secondary btn-cargarReporte" data-estado="{{estado}}" >Enviar</button>
                </form>
            </div>
    </body>

{{/partial}}
{{> templates/base }}