{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/Intereses.css">
        <title>Entidades de Interes</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <h1>ENTIDADES</h1>
                <div class="row row-cols-1 g-4">
                {{#each entidades}}
                    <div class="col">
                        <div class="tarjeta d-flex justify-content-between align-items-center">
                            <div>
                                <h2>{{this.nombre}}</h2>
                                <h4>Tipo: {{this.tipo}}</h4>
                                <h4>Cantidad de Establecimientos: {{this.cantidadEstablecimientos}}</h4>
                                <h4>Algunos Establecimientos: {{this.nombreDeEstablecimientos}}</h4>
                            </div>
                            <button type="button" class="btn btn-lg btn-danger btn-eliminar-entidadInteres" data-entidad-id="{{this.id}}">Eliminar</button>
                        </div>
                    </div>
                {{/each}}
                </div>
        </div>
        <script src="/js/Intereses.js"></script>
        {{#if usuarioBasico}}
            <script src="/js/EnviarUbicacion.js"></script>
        {{/if}}
{{/partial}}
{{> templates/base }}