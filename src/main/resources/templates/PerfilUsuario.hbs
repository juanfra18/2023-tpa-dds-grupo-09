{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/PerfilUsuario.css">
        <title>Perfil Usuario</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
        <div class="contenedor-botones">
            <a href="/incidentes" class="volver-button">Volver</a>
            {{#if miPerfil}}
                <button class="btn btn-secondary btn-editar" onclick="window.location.href='/editar/perfil'">Editar Perfil</button>
            {{/if}}
        </div>
            <div class="imagen">
                <img alt="fotoDePerfil" src="/images/userLogo.png" id="fotoDePerfil">
            </div>
            <div class="informacion">
                <h2>{{miembroDeComunidad.usuario.username}}</h2>
                <p>Nombre: {{miembroDeComunidad.nombre}}</p>
                <p>Apellido: {{miembroDeComunidad.apellido}}</p>
                <p>Mail: {{miembroDeComunidad.receptorDeNotificaciones.mail}}</p>
                <p>Telefono: {{miembroDeComunidad.receptorDeNotificaciones.telefono}}</p>
                {{#unless perfilAdministrador}}
                <p>Medio de Comunicacion: {{miembroDeComunidad.receptorDeNotificaciones.medioDeComunicacion.nombre}}</p>
                <p>Forma de Notificacion: {{miembroDeComunidad.receptorDeNotificaciones.formaDeNotificar.nombre}}</p>
                <p>Cantidad de incidentes reportados: {{incidentesAbiertos}}</p>
                <p>Cantidad de incidentes cerrados: {{incidentesCerrados}}</p>
                <p>
                    {{#if miPerfil}}
                    Mis comunidades:
                    {{else}}
                    Comunidades:
                    {{/if}}
                  {{#each miembroDeComunidad.comunidades}}
                    <a href="/comunidades/{{this.id}}">{{this.nombre}}</a>{{#unless @last}}, {{/unless}}
                  {{/each}}
                </p>
                {{/unless}}
            </div>
        </div>
        {{#if usuarioBasico}}
            <script src="/js/EnviarUbicacion.js"></script>
        {{/if}}
{{/partial}}
{{> templates/base }}
