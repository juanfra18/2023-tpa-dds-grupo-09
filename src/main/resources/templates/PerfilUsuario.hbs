{{> templates/base }}
{{#partial "head"}}
        <meta charset="utf-8"> <!--Definir los caracteres a utilizar-->
        <link rel = "stylesheet" href = "css/PerfilUsuario.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@700&display=swap" rel="stylesheet">
        <title>Perfil Usuario</title>
{{/partial}}
{{> templates/base }}

{{#partial "contenido"}}
        <div id="base">
            <div class="imagen">
                <img alt="fotoDePerfil" src="imagenes/userLogo.png" id="fotoDePerfil">
            </div>
            <div class="informacion">
                <h2>{{miembroDeComunidad.usuario.username}}</h2>
                <p>Nombre: {{miembroDeComunidad.nombre}}</p>
                <p>Apellido: {{miembroDeComunidad.apellido}}</p>
                <p>Mail: {{miembroDeComunidad.receptorDeNotificaciones.mail}}</p>
                <p>Telefono: {{miembroDeComunidad.receptorDeNotificaciones.telefono}}</p>
                <p>Cantidad de incidentes reportados: </p>
                <p>Cantidad de incidentes cerrados: </p>
                <p>Cantidad de incidentes revisados: </p>
                <p>Mis comunidades:
                  {{#each miembroDeComunidad.comunidades}}
                    {{this.nombre}}{{#unless @last}}, {{/unless}}
                  {{/each}}
                </p>
            </div>
        </div>
{{/partial}}
{{> templates/base }}
