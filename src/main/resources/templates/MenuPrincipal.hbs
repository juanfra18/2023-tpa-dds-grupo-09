{{> templates/base }}
{{#partial "head"}}
        <meta charset="utf-8"> <!--Definir los caracteres a utilizar-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
        <link rel = "stylesheet" href = "css/MenuPrincipal.css">
        <title>Inicio</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <div id="contenedorPrincipal">
                <h1 id="titulo">Bienvenido</h1>
                <h2 id="subtitulo">¿Qué desea hacer?</h2>
            </div>
            <div id="contenedorFuncional">

                {{#if usuarioBasico}}
                <button class="btn-31" onclick="window.location.href = 'reportarIncidente/abierto'">
                    <span class="text-container">
                      <span class="text">Reportar incidente</span>
                    </span>
                  </button>
                  <button class="btn-31" onclick="window.location.href = 'reportarIncidente/cerrado'">
                    <span class="text-container">
                      <span class="text"> Cerrar incidente
                    </span>
                    </span>
                  </button>
                  <button class="btn-31" onclick="window.location.href = 'comunidades'">
                    <span class="text-container">
                      <span class="text">Unirme a comunidad</span>
                    </span>
                  </button>
                  {{/if}}

                  {{#if usuarioEmpresa}}
                  <button class="btn-31" onclick="window.location.href='rankings'">
                    <span class="text-container">
                      <span class="text">Ver Rankings</span>
                    </span>
                  </button>
                  {{/if}}

                  {{#if administrador}}
                  <button class="btn-31">
                     <span class="text-container">
                        <span class="text">Administrar Usuarios</span>
                     </span>
                  </button>
                  <button class="btn-31">
                     <span class="text-container">
                        <span class="text">Administrar Empresas</span>
                     </span>
                  </button>
                  <button class="btn-31">
                     <span class="text-container" onclick="window.location.href='cargarEmpresas'">
                        <span class="text">Cargar Empresas</span>
                     </span>
                  </button>
                  {{/if}}
            </div>

        </div>
{{/partial}}
{{> templates/base }}
