{{> templates/base }}
{{#partial "head"}}
        <meta charset="utf-8"> <!--Definir los caracteres a utilizar-->
        <link rel = "stylesheet" href = "css/UnirseComunidad.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <title>Consulta de Incidentes</title>
    </head>

{{/partial}}
{{> templates/base }}

{{#partial "contenido"}}
        <div id="base">
            <h1>COMUNIDADES</h1>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                {{#each comunidades}}
                    <div class="col">
                        <div class="tarjetaComunidad d-flex justify-content-between align-items-center">
                            <div>
                                <h2>{{this.nombre}}</h2>
                                <h4>Miembros: {{this.cantidadMiembros}}</h4>
                            </div>
                            <button type="button" class="btn btn-secondary">Unirme</button>
                        </div>
                    </div>
                {{/each}}
                </div>
        </div>
{{/partial}}
{{> templates/base }}
