{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/Servicios.css">
        <title>Servicios</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <h1>SERVICIOS</h1>
                <div class="row row-cols-1 g-4">
                {{#each servicios}}
                    <div class="col">
                        <div class="tarjetaServicio d-flex justify-content-between align-items-center">
                            <div>
                                <h2>{{this.nombre}}</h2>
                                <h4>Tipo: {{this.getTipo}}</h4>
                                <h4>Estado: {{this.estado}}</h4>
                            </div>
                            {{#if administrador}}
                            <button type="button" class="btn btn-secondary btn-eliminar" data-organismo-id="{{organismo_id}}" data-entidadPrestadora-id="{{entidadPrestadora_id}}" data-entidad-id="{{entidad_id}}" data-establecimiento-id="{{establecimiento_id}}" data-servicio-id="{{this.id}}">Eliminar</button>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
                </div>
        </div>
        <script src="/js/EliminarServicio.js"></script>
{{/partial}}
{{> templates/base }}