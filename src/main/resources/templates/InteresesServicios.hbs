{{> templates/base }}
{{#partial "tituloYcss"}}
        <link rel = "stylesheet" href = "/css/Intereses.css">
        <title>Servicios de Interes</title>
 {{/partial}}
 {{> templates/base }}

 {{#partial "contenido"}}
        <div id="base">
            <h1>SERVICIOS</h1>
                <div class="row row-cols-1 g-4">
                {{#each servicios}}
                    <div class="col">
                        <div class="tarjeta d-flex justify-content-between align-items-center">
                            <div>
                                <h2>{{this.servicio.nombre}}</h2>
                                <h4>Tipo: {{this.servicio.tipoNombre}}</h4>
                                <h4>Rol: {{this.nombreRol}}</h4>
                                <h4>Estado: {{this.servicio.estado}}</h4>
                                <h4>Establecimiento: {{this.servicio.establecimiento.nombre}}</h4>
                            </div>
                            <button type="button" class="btn btn-secondary btn-cambiar-rol" data-servicio-id="{{this.id}}">Convertirme en: {{otroRol}}</button>
                            <button type="button" class="btn btn-secondary btn-eliminar-servicioInteres" data-servicio-id="{{this.id}}">Eliminar</button>
                      </div>
                    </div>
                {{/each}}
                </div>
        </div>
        <script src="/js/EliminarServicioDeInteres.js"></script>
        <script src="/js/CambiarRol.js"></script>
        {{#if usuarioBasico}}
            <script src="/js/EnviarUbicacion.js"></script>
        {{/if}}
{{/partial}}
{{> templates/base }}